<!--item（印章详情页）-->
<view style="background:url('../../images/item.jpg') no-repeat center center;background-size: 750rpx 1200rpx;" class="item-container">
	<!-- 详情结果页面 -->
	<view class="item-result clearfix">
		<!-- 名家、翻页 -->
		<view class="left fl" style="background:url('https://stamp.qingkequn.com/result-left-bg.png') no-repeat center center;background-size: 50rpx 974rpx">
			<view class="left fl" >
				<!-- 作者 -->
				<view class="author">
				{{searchResult.author}}
				</view>
				<!-- 翻页 -->
				<button class="next" type="default" size="default"></button>
			</view>
		</view>
			<!-- 印详细信息 -->
			<scroll-view scroll-y class="right fr clearfix">
				<!-- 单个印章 -->
				123
				<!--  -->
				<image></image>
			</scroll-view>
	</view>
  <!-- 释文、边款、详情 -->
  <view class="item-box fr" style="">
			<!-- 释文、边款、详情按钮 -->
  		<button type="default" size="default" class="desc-btn" bindtap="chooseAuthorHandle"></button>
			<!-- 释文、边款、详情（展开页） -->
  		<scroll-view scroll-y animation="{{animationData}}" class="stamp-desc" >
  			<!-- 释文 -->
				<view class="explain" style="background:url('../../images/desc.png') no-repeat center center;background-size: 584rpx 140rpx ">释文：</view>
				<!-- 边款 -->
				<view class="side" style="background:url('../../images/desc.png') no-repeat center center;background-size: 584rpx 140rpx  ">边款：</view>
				<!-- 详情 -->
				<view class="desc" style="background:url('../../images/desc.png') no-repeat center center;background-size: 584rpx 140rpx  ">详情：</view>
  		</scroll-view>
  </view>
</view>
