/*item 印章详情页*/
.item-container{
	width:750rpx;
	height:1200rpx;
	position: relative;
	overflow: hidden;
}
/*搜索结果页*/
.item-result{
	width:636rpx;
	height:974rpx;
	margin-top:138rpx;
}
/*名家、翻页*/
.item-result .left{
	width:50rpx;
	height:974rpx;
	position: relative;
}
/*名家*/
.author{
	width:50rpx;
	height:160rpx;
	background-color: #D4CBB8;
	margin-top:44rpx;
	margin-bottom:580rpx;
	color:#fff;
	text-align: center;
}
/*翻下页*/
.next[type='default']{
	width:44rpx;
	height:160rpx;
	background-color: transparent;
	padding-left:0;
	padding-right:0;
}
/*单个印章列表*/
.item-result .right{
	text-align: center;
	width:584rpx;
	height:974rpx;
	background-color: pink;
}
/*搜索框（选择名家、搜索按钮）*/
.item-box{
	width:160rpx;
	padding:0;
	height:972rpx;
	margin:0;
	box-sizing: border-box;
	/*margin-right:68rpx;*/
	/*margin-top:140rpx;*/
	position: absolute;
	right:64rpx;
	top:140rpx;
	display:flex;
}
/*释文、边款、详情按钮*/
.desc-btn[type='default']{
	height:420rpx;
	width:60rpx;
	background-color: transparent;
	position: absolute;
	bottom:0;
	right:0;
}
/*印章详情（释文、边款、详情）*/
.stamp-desc{
	height:432rpx;
	width:0rpx;
	background-color: transparent;
	position: absolute;
	left:0rpx;
	bottom:-5rpx;
}
/*释文、边款、详情*/
.explain,.side,.desc{
	width:584rpx;
	height:140rpx;
	line-height:140rpx;
	box-sizing: border-box;
	padding-left:50rpx;
	color:#CBB4A5;
}


